        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="font">@font/main_bold</item>
    </style>
    <style name="buttonTsbeh">
        <item name="android:background">@drawable/rectangle_mit_radius_25_button_dark</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:padding">12dp</item>
        <item name="font">@font/main_bold</item>
    </style>
    <style name="sebha_image">
