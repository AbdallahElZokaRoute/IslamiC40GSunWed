<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Islami" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/deep_navy</item>
        <item name="colorPrimaryVariant">#0A1023</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_yellow</item>
        <item name="colorSecondaryVariant">#DCAE03</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="buttonNavigationStyle">
        <item name="android:background">@color/deep_navy</item>
        <item name="itemTextColor">@color/nav_item_color_dark</item>
        <item name="itemIconTint">@color/nav_item_color_dark</item>
        <item name="itemIconSize">32dp</item>

    </style>
    <style name="islamicBg">
        <item name="android:background">@drawable/main_bg_dark</item>
    </style>
    <style name="appBarTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="font">@font/main_bold</item>
        <item name= "android:padding">4dp</item>
    </style>
    <style name="viewBackground">
        <item name="android:background">@color/golden_yellow</item>
    </style>
    <style name="textStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="font">@font/main_bold</item>
    </style>
    <style name="backButton">
        <item name="android:src">@drawable/back_dark</item>
    </style>
    <style name="versesCardView">
        <item name="android:backgroundTint">@color/deep_navy_80_obesity</item>
    </style>
    <style name="editViewTsbeh">
