<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/quran_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/quran_image"
        app:layout_constraintHeight_percent="0.2"
        />
    <View
        android:id="@+id/quran_horizontal_line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        style="@style/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/quran_image"
        />
    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quran_horizontal_line1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/chapter_name"
        style="@style/textStyle"
        app:layout_constraintStart_toEndOf="@id/chapter_position"
        />
    <TextView
        android:id="@+id/chapter_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quran_horizontal_line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chapter_name"
        android:text="@string/chapter_position"
        style="@style/textStyle"
        />
    <View
        android:id="@+id/quran_horizontal_line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        style="@style/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/chapter_position"
        />
    <View
        android:id="@+id/quran_vertical_line1"
        android:layout_width="3dp"
        android:layout_height="0dp"
        style="@style/viewBackground"
        app:layout_constraintStart_toEndOf="@id/chapter_position"
        app:layout_constraintEnd_toStartOf="@id/chapter_name"
        app:layout_constraintTop_toTopOf="@id/quran_horizontal_line1"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chapters_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/quran_horizontal_line2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_chapter_name"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />

</androidx.constraintlayout.widget.ConstraintLayout>