<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:style="@style/Islamic_BG">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"
        />

    <ImageView
        android:id="@+id/imv_sebha_head"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/sebha_head_image"
        android:adjustViewBounds="true"
        style="@style/tasbeeh_image"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imv_sebha_body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="-28dp"
        android:src="@drawable/sebha_body_image"
        android:adjustViewBounds="true"
        style="@style/tasbeeh_image"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toBottomOf="@id/imv_sebha_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_number_of_tasbeeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="38dp"
        android:text="عدد التسبيحات"
        android:textSize="25sp"
        android:fontFamily="@font/elmessiri"
        style="@style/textStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_sebha_body"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tasbeeh_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_number_of_tasbeeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/cv_counter">
        <TextView
            android:id="@+id/tv_tasbeeh_counter"
            android:layout_width="69dp"
            android:layout_height="81dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/cairo"
            style="@style/textStyle"
            tools:text="30"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tasbeeh_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cv_tasbeeh_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_tasbeeh_text"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:text="سبحان الله"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/cairo"
            style="@style/cv_tasbeeh_text"
            />
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>