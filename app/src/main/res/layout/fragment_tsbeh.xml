<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="47dp"
        >
    <ImageView
        android:id="@+id/sebha_head"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        style="@style/head_sebha"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/sebha"
        android:layout_width="232dp"
        android:layout_height="234dp"
        style="@style/sebha_image"
        android:layout_marginTop="75dp"

        />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_tsbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_tsbeeh"
        android:textSize="25sp"
        style="@style/textStyle"
        app:layout_constraintTop_toBottomOf="@id/frame_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/ev_number_tsbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_tsbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="0"
        android:textSize="25sp"
        style="@style/editViewTsbeh"
        />
    <Button
        android:id="@+id/button_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sobhan_allah"
        style="@style/buttonTsbeh"
        app:layout_constraintTop_toBottomOf="@id/ev_number_tsbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="25sp"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>