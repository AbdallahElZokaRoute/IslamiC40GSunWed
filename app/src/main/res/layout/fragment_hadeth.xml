<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/hadeth_image"
        android:layout_width="312dp"
        android:layout_height="219dp"
        android:src="@drawable/hadeth_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/hadeth_layout_1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/hadeth_image"
        style="@style/viewBackground"
        />
    <TextView
        android:id="@+id/ahadeth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/ahadeth"
        app:layout_constraintTop_toBottomOf="@id/hadeth_layout_1"
        android:textSize="25sp"
        style="@style/textStyle"
        />
    <View
        android:id="@+id/hadeth_layout_2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/ahadeth_title"
        style="@style/viewBackground"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ahadeth_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hadeth_layout_2"
        style="@style/textStyle"
        tools:listitem="@layout/item_ahadeth"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        />
</androidx.constraintlayout.widget.ConstraintLayout>